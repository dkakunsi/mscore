{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "advertorial",
    "title": "Advertorial",
    "description": "The Advertorial Data Schema",
    "type": "object",
    "properties": {
        "domain": {
            "type": "string",
            "const": "advertorial"
        },
        "id": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "maxLength": 36
                }
            ]
        },
        "code": {
            "description": "The code of the advert",
            "type": "string",
            "maxLength": 100,
            "unique": true
        },
        "name": {
            "type": "string",
            "maxLength": 100
        },
        "url": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "provider": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "maxLength": 100
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "maxLength": 100
                },
                "phone": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "type": "string",
                            "pattern": "^\\d{11,14}",
                            "maxLength": 14
                        }
                    ]
                }
            },
            "required": [
                "name",
                "email"
            ]
        },
        "status": {
            "type": "string",
            "enum": [
                "Pengajuan telah terdaftar",
                "Bukti tayang telah diperiksa",
                "Dokumen pembayaran telah dicetak",
                "Dokumen pembayaran telah ditandatangani",
                "Dokumen pembayaran telah diverifikasi",
                "Pengajuan telah diverivikasi PPTK",
                "Pengajuan telah diverifikasi Bendahara",
                "Pengajuan telah disetujui PPK",
                "Pembayaran telah disetujui",
                "Pengajuan telah selesai",
                "Pengajuan ditolak"
            ]
        },
        "closeReason": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "createdDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "createdBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        }
    },
    "required": [
        "domain",
        "code",
        "name",
        "provider"
    ],
    "additionalProperties": false
}