{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "workflowtask",
    "title": "Workflow Task Response",
    "description": "The Workflow Task Response Data Schema",
    "type": "object",
    "properties": {
        "domain": {
            "const": "workflowtask"
        },
        "id": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "maxLength": 36
                }
            ],
            "unique": true
        },
        "name": {
            "type": "string",
            "maxLength": 100
        },
        "processInstance": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "maxLength": 36
                },
                "domain": {
                    "type": "string",
                    "const": "workflow"
                }
            },
            "required": [
                "id",
                "domain"
            ]
        },
        "dueDate": {
            "type": "string",
            "format": "date"
        },
        "assignee": {
            "type": "string"
        },
        "organisation": {
            "type": "string"
        },
        "executionId": {
            "type": "string"
        },
        "owner": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "maxLength": 100
        },
        "createdDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "createdBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        }
    },
    "required": [
        "domain",
        "executionId",
        "processInstance"
    ]
}