{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "workflow",
    "title": "Workflow",
    "description": "The Workflow Data Schema",
    "type": "object",
    "properties": {
        "domain": {
            "const": "workflow"
        },
        "id": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "maxLength": 36
                }
            ],
            "unique": true
        },
        "name": {
            "type": "string",
            "maxLength": 100
        },
        "action": {
            "type": "string"
        },
        "entity": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "maxLength": 36
                        },
                        "domain": {
                            "type": "string",
                            "const": "advertorial"
                        }
                    },
                    "required": [
                        "id",
                        "domain"
                    ]
                }
            ]
        },
        "owner": {
            "type": "string"
        },
        "status": {
            "type": "string"
        },
        "createdDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "createdBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        }
    },
    "required": [
        "domain",
        "name",
        "action",
        "entity"
    ]
}