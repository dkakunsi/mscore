{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "people",
  "title": "People",
  "description": "The People Data Schema",
  "type": "object",
  "properties": {
    "id": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "maxLength": 36
        }
      ],
      "unique": true
    },
    "code": {
      "type": "string",
      "maxLength": 100,
      "unique": true
    },
    "domain": {
      "type": "string",
      "const": "people"
    },
    "name": {
      "type": "string",
      "maxLength": 100
    },
    "dateOfBirth": {
      "type": "string",
      "format": "date-time"
    },
    "contacts": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "EMAIL",
                  "PHONE"
                ]
              },
              "detail": {
                "type": "string"
              },
              "description": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            }
          }
        }
      ]
    },
    "addresses": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "domain": {
                "type": "string",
                "const": "address"
              },
              "detail": {
                "type": "string"
              },
              "primary": {
                "type": "boolean"
              },
              "region": {
                "oneOf": [
                  {
                    "type": "null"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "maxLength": 36
                      },
                      "domain": {
                        "type": "string",
                        "const": "region"
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      ]
    },
    "createdDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "createdBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "lastUpdatedDate": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    },
    "lastUpdatedBy": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        }
      ]
    }
  },
  "required": [
    "domain",
    "code",
    "name",
    "type"
  ]
}