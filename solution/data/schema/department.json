{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "department",
    "title": "Department",
    "description": "The Department Data Schema",
    "type": "object",
    "properties": {
        "id": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "maxLength": 36
                }
            ],
            "unique": true
        },
        "code": {
            "type": "string",
            "maxLength": 100,
            "unique": true
        },
        "domain": {
            "type": "string",
            "const": "department"
        },
        "name": {
            "type": "string",
            "maxLength": 100
        },
        "description": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "maxLength": 5000
                }
            ]
        },
        "parent": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "maxLength": 36
                        },
                        "domain": {
                            "type": "string",
                            "const": "department"
                        }
                    }
                }
            ]
        },
        "region": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "maxLength": 36
                        },
                        "domain": {
                            "type": "string",
                            "const": "region"
                        }
                    }
                }
            ]
        },
        "chiefOfDepartment": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "maxLength": 36
                        },
                        "domain": {
                            "type": "string",
                            "const": "people"
                        }
                    }
                }
            ]
        },
        "createdDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "createdBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedDate": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        },
        "lastUpdatedBy": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string"
                }
            ]
        }
    },
    "required": [
        "domain",
        "code",
        "name"
    ]
}