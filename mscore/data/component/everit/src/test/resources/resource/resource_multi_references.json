{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "domain",
  "title": "Domain",
  "description": "The Domain Data Schema",
  "type": "object",
  "properties": {
    "domain": {
      "const": "domain"
    },
    "id": {
      "type": "string",
      "maxLength": 8,
      "unique": true
    },
    "name": {
      "type": "string",
      "maxLength": 8
    },
    "reference1": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "maxLength": 36
        },
        "domain": {
          "oneOf": [
            {
              "type": "string",
              "const": "referenceDomain1a"
            },
            {
              "type": "string",
              "const": "referenceDomain1b"
            }
          ]
        }
      }
    },
    "reference2": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "maxLength": 36
            },
            "domain": {
              "oneOf": [
                {
                  "type": "null",
                  "const": "referenceDomain2a"
                },
                {
                  "type": "string",
                  "const": "referenceDomain2b"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "required": [
    "domain",
    "id",
    "name",
    "reference1"
  ]
}